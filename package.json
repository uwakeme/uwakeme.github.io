{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "hexo generate",
    "build:prod": "hexo clean && hexo generate --config _config.yml,_config.production.yml",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo server",
    "server:debug": "hexo server --debug",
