{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "node --max-old-space-size=8192 node_modules/hexo/bin/hexo generate",
    "build:prod": "node --max-old-space-size=8192 node_modules/hexo/bin/hexo clean && node --max-old-space-size=8192 node_modules/hexo/bin/hexo generate --config _config.yml,_config.production.yml",
    "clean": "node --max-old-space-size=4096 node_modules/hexo/bin/hexo clean",
    "deploy": "node --max-old-space-size=8192 node_modules/hexo/bin/hexo deploy",
    "server": "node --max-old-space-size=8192 node_modules/hexo/bin/hexo server",
    "server:debug": "node --max-old-space-size=8192 node_modules/hexo/bin/hexo server --debug",
    "publish": "node --max-old-space-size=4096 node_modules/hexo/bin/hexo publish",
    "wechat": "node --max-old-space-size=4096 node_modules/hexo/bin/hexo wechat",
    "optimize": "npm run clean && npm run build:prod",
    "analyze": "node --max-old-space-size=8192 node_modules/hexo/bin/hexo generate --analyze",
    "lighthouse": "lighthouse http://localhost:4000 --output html --output-path ./lighthouse-report.html"
  },
  "hexo": {
    "version": "7.3.0"
  },
  "dependencies": {
    "add": "^2.0.6",
    "axios": "^1.9.0",
    "gray-matter": "^4.0.3",
    "hexo": "^7.3.0",
    "hexo-asset-image": "^1.0.0",
    "hexo-auto-canonical": "^0.1.1",
    "hexo-deployer-git": "^4.0.0",
    "hexo-filter-mermaid-diagrams": "^1.0.5",
    "hexo-filter-optimize": "^0.3.1",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-feed2": "^1.0.5",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-robotstxt": "^0.2.0",
    "hexo-generator-search": "^2.4.3",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-generator-tag": "^2.0.0",
    "hexo-helper-live2d": "^3.1.1",
    "hexo-lazyload-image": "^1.1.3",
    "hexo-neat": "^1.0.9",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-marked": "^6.3.0",
    "hexo-renderer-pug": "^3.0.0",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-seo": "^2.0.1",
    "hexo-server": "^3.0.0",
    "hexo-theme-butterfly": "^5.4.2",
    "hexo-theme-fluid": "^1.9.8",
    "hexo-theme-landscape": "^1.0.0",
    "hexo-wordcount": "^6.0.1",
    "or": "^0.2.0",
    "puppeteer": "^22.15.0",
    "turndown": "^7.2.0",
    "yarn": "^1.22.22"
  }
}
